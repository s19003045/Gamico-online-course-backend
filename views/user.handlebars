<div class="maincontent bg--white pt--80 pb--55">
  <div class="container user-info-page">
    <div class="row">

      <div class="col-lg-12 col-12">

        <div class="wn__single__product">
          <div class="row">
            <div class="col-lg-3 col-12">
              <div class="user-image">
                <img src="{{user.avatar}}" alt="user-avatar">
              </div>
            </div>

            <div class="col-lg-9 col-12">
              <div class="user-info">
                <h3>{{user.username}}</h3>
                <div class="user-info-item">
                  <div class="title">E-mail</div>
                  <div class="user-info-data">{{user.email}}</div>
                </div>
                <div class="user-info-item">
                  <div class="title">Country</div>
                  <div class="user-info-data">{{user.country}}</div>
                </div>
                <div class="user-info-item">
                  <div class="title">Timezone</div>
                  <div class="user-info-data">{{user.timezone}}</div>
                </div>
                <div class="user-info-item">
                  <div class="title">Description</div>
                </div>
                <div class="user-info-item">
                  <div class="user-info-data">{{user.description}}</div>
                </div>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>