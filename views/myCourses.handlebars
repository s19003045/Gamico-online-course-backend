<div class="container section-padding--lg">
  <div class="row">
    <div class="col-12 my-5">
      <h3 class="h3">我購買的課程</h3>
    </div>

    {{#each userenrollments}}
    <!-- Start Single Product -->
    <div class="product product__style--3 col-lg-3 col-md-4 col-sm-6 col-12 course-card-mt">
      <div class="product__thumb">
        <img src="{{this.Course.image}}" alt="course image" class="img-fluid">
      </div>
      <div class="course-content">
        <h4 class="course-name">{{this.Course.name}}</h4>

        <div class="progress mb-3">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
            style="width: {{this.completeRate}}%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>

      </div>

      <div class="couse-btns">
        <div class="couse-btn study-couse mx-auto">
          <a href="/courses/{{this.Course.id}}/lessons"><i class="fas fa-magic"></i>
            繼續學習</a>
        </div>
      </div>

    </div>
    <!-- End Single Product -->
    {{/each}}

  </div>

  <ul class="wn__pagination mt-5">
    <li class="active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#"><i class="zmdi zmdi-chevron-right"></i></a></li>
  </ul>
</div>