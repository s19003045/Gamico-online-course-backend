<div class="page-blog-details section-padding--lg bg--white">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-12">
        <div class="course-tabs">
          <a href="/courses/{{courseId}}/introduction" class="no-on-page">課程介紹</a>
          <a href="/courses/{{courseId}}/lessons" class="on-page">課程內容</a>
          <a href="/courses/{{courseId}}/post" class="no-on-page">問題討論</a>
        </div>

        <div class="orderby__wrapper lessons-list">
          <form action="/courses/{{courseId}}/lessons" method="GET" class="mt-5">
            <span>選擇章節</span>
            <select class="shot__byselect" onchange="this.form.submit()" type="text" name="lessonNumber">
              {{#each lessons}}
              <option value="{{this.lessonNumber}}" {{#ifCond ../lessonNumber this.lessonNumber
                }}selected{{/ifCond}}>
                第{{this.lessonNumber}}單元-{{this.title}}</option>
              {{/each}}
            </select>
          </form>
        </div>

        <div class="blog-details content">
          <article class="blog-post-details">
            <div class="post-thumbnail">
              <iframe title="vimeo-player" src="https://player.vimeo.com/video/230332993" width="100%" height="520px"
                frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="post_wrapper">
              <div class="post_header">
                <h2>第{{lesson.lessonNumber}}單元-{{lesson.title}}</h2>
                <div class="blog-date-categori">
                  <ul>
                    <li><strong>Updated At </strong> {{moment lesson.updatedAt}}</li>
                    <li><a href="#" title="Posts by boighor" rel="author">boighor</a></li>
                  </ul>
                </div>
              </div>
              <div class="post_content">
                <h4>Introduction</h4>
                <p>{{lesson.intro}}</p>
                <h4>Content</h4>
                <p>{{lesson.contents}}</p>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>
  </div>
</div>