<div class="container">
  <div class="row">
    <div class="col-12 my-5">
      <h3 class="h3">我收藏的課程</h3>
    </div>

    {{#each favorites}}
    <!-- Start Single Product -->
    <div class="product product__style--3 col-lg-3 col-md-4 col-sm-6 col-12">
      <div class="product__thumb">
        <img src="https://fakeimg.pl/270x340/" alt="product image">
        <div class="favorite-btn">
          <form action="/favorite/{{this.Course.id}}" method="POST"><button type="submit" class="buy-now"><i
                class="fas fa-heart-broken"></i></button></form>
        </div>
      </div>
      <div class="course-content">
        <h4 class="course-name">{{this.Course.name}}</h4>
        <div class="info">
          <h4><i class="fas fa-star"></i>：{{this.Course.ratingAverage}}</h4>
          <h4><i class="far fa-comment-dots"></i>：{{this.Course.ratingCount}}</h4>
          <h4><i class="fas fa-users"></i>：{{this.Course.studentCount}}</h4>
          <h4><i class="far fa-clock"></i>：{{tthis.Coursehis.totalTime}}</h4>
        </div>
        <h4 class="course-prize">NT$ {{this.Course.price}}</h4>
      </div>

      <div class="couse-btns">
        <div class="couse-btn buy">
          <form action="/order/{{this.Course.id}}" method="POST"><button type="submit"><i
                class="fas fa-shopping-cart"></i>
              購買</button></form>
        </div>
        <div class="couse-btn see-more">
          <a href="/courses/{{this.Course.id}}/introduction"><i class="fas fa-search"></i>
            查看</a>
        </div>
      </div>

    </div>
    <!-- End Single Product -->
    {{/each}}

  </div>

  <ul class="wn__pagination mt-5">
    <li class="active"><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#"><i class="zmdi zmdi-chevron-right"></i></a></li>
  </ul>
</div>